<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Appbar背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 控制各个控件被选中时的颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 各个控制控件的默认颜色 -->
        <item name="android:colorControlNormal">@color/colorControlNormal</item>
        <!-- 页面背景色 -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <!-- 底部导航栏颜色 -->
        <item name="android:navigationBarColor">@color/navigationColor</item>
        <!-- ToolBar上的Title颜色 -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <!-- 普通输入框样式 -->
    <style name="appEditStyle">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>

    <!-- 普通按钮主题 -->
    <style name="appBtnStyle">
        <item name="android:background">@drawable/ripple_btn</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- title style -->
    <style name="titleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
