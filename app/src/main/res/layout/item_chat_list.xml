<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:background="@drawable/selector_white"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin">

    <ImageView
        android:id="@+id/iv_portrait"
        android:layout_width="@dimen/portrait_size"
        android:layout_height="@dimen/portrait_size"
        android:layout_centerVertical="true"
        android:src="@drawable/circle_portrait" />

    <LinearLayout
        android:id="@+id/ll_status"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/margin"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11ï¼š20"
            android:textColor="@color/text_hint"
            android:gravity="right"
            android:textSize="@dimen/font_size_hit" />

        <ImageView
            android:id="@+id/iv_disturb"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:src="@android:drawable/ic_popup_reminder"
            android:tint="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin"
        android:layout_toLeftOf="@id/ll_status"
        android:layout_toRightOf="@id/iv_portrait"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/text_main"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_decs"
            android:textSize="@dimen/font_size_desc" />
    </LinearLayout>


</RelativeLayout>